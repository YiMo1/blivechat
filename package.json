{
  "private": true,
  "version": "0.1.0",
  "description": "鱼鱼的B站直播姬H5插件",
  "packageManager": "pnpm@9.15.0",
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development&& pnpm run -r dev",
    "dev:client": "set NODE_ENV=development&& pnpm run --filter client dev",
    "dev:server": "set NODE_ENV=development&& pnpm run --filter server dev",
    "check": "vue-tsc --incremental --noEmit",
    "lint": "eslint --fix --cache --cache-location \"temp/.eslintcache\" .",
    "format": "prettier --write --cache .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "author": {
    "name": "伊墨"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@typescript-eslint/parser": "^8.18.0",
    "axios": "^1.7.9",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.32.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.6.0",
    "typescript-eslint": "^8.18.0",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{json,less,css}": "prettier --write",
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/server/**/*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'vue-tsc -p packages/server/tsconfig.json --noEmit'"
    ],
    "packages/client/**/*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'vue-tsc -p packages/client/tsconfig.json --noEmit'"
    ],
    "packages/!(server|client)/**/*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "bash -c vue-tsc --noEmit"
    ]
  }
}
